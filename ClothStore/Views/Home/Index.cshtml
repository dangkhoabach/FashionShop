<!--new-arrivals start -->
<section id="new-arrivals" class="new-arrivals">
    <div class="container">
        <div class="section-header">
            <h2>Sản Phẩm Mới</h2>
        </div><!--/.section-header-->
        <div class="new-arrivals-content">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-4">
                        <div class="single-new-arrival">
                            <div class="single-new-arrival-bg">
                                <a href="/Product/Details/@item.MaMatHang">
                                    <img src="@item.HinhAnh" alt="images" style="height: 360px; width: 360px; object-fit: contain">
                                </a>
                                <div class="single-new-arrival-bg-overlay"></div>
                                <div class="new-arrival-cart">
                                    <p>
                                        <span class="lnr lnr-cart"></span>
                                        <a href="@Url.Action("ThemGioHang","GioHang", new { MaMatHang = item.MaMatHang,
                                            @strURL = Request.Url.ToString()})">Thêm <span>vào </span> giỏ hàng</a>
                                    </p>
                                    <p class="arrival-review pull-right">
                                        <span class="lnr lnr-heart"></span>
                                        <span class="lnr lnr-frame-expand"></span>
                                    </p>
                                </div>
                            </div>
                            <h4><a href="/Product/Details/@item.MaMatHang">@item.TenMatHang</a></h4>
                            <p class="arrival-product-price">@item.DonGia</p>
                        </div>
                    </div>
                }

                <button type="button" class="btn btn-block" onclick="window.location.href='/Product/Product'"><b>Tất cả sản phẩm</b></button>

            </div><!--/.container-->
        </div>
    </div>

</section><!--/.new-arrivals-->
<!--new-arrivals end -->

