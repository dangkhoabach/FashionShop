@model ClothStore.Models.HoaDon

@{
    ViewBag.Title = "[Admin] Tạo đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tạo đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">Mã đơn hàng</label>
            @Html.EditorFor(model => model.MaHoaDon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaHoaDon, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">Ngày tạo đơn</label>
            @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label">Tổng tiền</label>
            @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <input type="submit" value="Thêm đơn hàng" class="btn btn-outline-danger" />
        </div>
    </div>
}

<div>
    <hr />
    @Html.ActionLink("Quay lại danh sách", "List")
</div>
